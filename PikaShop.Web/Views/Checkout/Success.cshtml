@{
    ViewData["Title"] = "Success";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .success-container {
            max-width: 500px;
            margin: 100px auto;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            background-color: #fff;
        }

        .success-heading {
            color: #28a745;
            font-size: 32px;
            margin-bottom: 20px;
        }

        .success-message {
            color: #6c757d;
            font-size: 18px;
        }

        .visit-again {
            color: #007bff;
            font-size: 18px;
            text-decoration: none;
        }

            .visit-again:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>

    <div class="container">
        <div class="success-container">
            <h1 class="success-heading">Success!</h1>
            <p class="success-message">Your payment was successful! Thank you for shopping with us.</p>
            <p class="success-message">We look forward to seeing you again soon!</p>
            <a href="/" class="visit-again">Visit again</a>
        </div>
    </div>

</body>
</html>
