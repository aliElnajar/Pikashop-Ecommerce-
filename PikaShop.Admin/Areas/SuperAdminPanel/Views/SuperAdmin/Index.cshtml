@using PikaShop.Common.Pagination
@model List<PikaShop.Admin.Areas.SuperAdminPanel.ViewModel.ApplicationUserEntityViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Admins</h1>
<div class="animated fadeIn">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <strong class="card-title">@Html.ActionLink(" Create New", "Add", new { }, new { @class = "btn p-1 m-1 bg-primary text-white fa fa-plus" })</strong>
                </div>
                <div class="card-body">
                    <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    User Name
                                </th>
                                <th>
                                    Email
                                </th>
                                <th>
                                    First Name
                                </th>
                                <th>
                                    Last Name
                                </th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UserName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FirstName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.LastName)
                                    </td>
                                    <td>
                                        @* @Html.ActionLink("", "Edit", new { id = item.Id }, new { @class = "btn bg-warning text-white fa fa-pencil" }) *@
                                        @Html.ActionLink("", "Details", new { id = item.Id }, new { @class = "btn bg-info text-white fa fa-eye" })
                                        @* @Html.ActionLink("", "Delete", new { id = item.Id }, new { @class = "btn bg-danger text-white fa fa-trash-o" }) *@
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>


    </div>
</div><!-- .animated -->


